{
  "compilerOptions": {
      "forceConsistentCasingInFileNames": true,
      "rootDir": "src",
      "baseUrl": "src",
      "composite": false, // https://github.com/Microsoft/TypeScript/issues/31181
      "downlevelIteration": true,
      "moduleResolution": "node",
      "outDir": "./lib",
      "noImplicitAny": true,
      "noImplicitReturns": true,
      "noImplicitThis": true,
      "alwaysStrict": true,
      "strictBindCallApply": true,
      "strictFunctionTypes": true,
      "strictNullChecks": true,
      "strictPropertyInitialization": true,
      "declaration": true,
      "declarationMap": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "lib": [
          "es6"
      ],
      "target": "es6",
      "module": "commonjs",
      "sourceMap": true,
      "paths": {
        "heimdalljs": ["../../eyeglass/src/types/heimdalljs"],
        "*": ["types/*"],
      }
  },
  "include": [
      "./src/**/*"
  ],
  "references": [{"path": "../eyeglass"}]

}
