{
  "compilerOptions": {
      "forceConsistentCasingInFileNames": true,
      "rootDir": "src",
      "baseUrl": "src",
      "composite": false, // https://github.com/Microsoft/TypeScript/issues/31181
      "downlevelIteration": true,
      "moduleResolution": "node",
      "outDir": "./lib",
      "alwaysStrict": true,
      "strictBindCallApply": true,
      "declaration": true,
      "declarationMap": true,
      "lib": [
          "es6"
      ],
      "target": "es6",
      "module": "commonjs",
      "sourceMap": true,
      "paths": {
        "node-sass": ["../../eyeglass/@types/node-sass"],
        "*": ["types/*"],
      },
      "noImplicitAny": false,
      "noImplicitReturns": false,
      "noImplicitThis": false,
      "strictFunctionTypes": false,
      "strictNullChecks": false,
      "strictPropertyInitialization": false,
      "noUnusedLocals": false,
      "noUnusedParameters": false,
  },
  "include": [
      "./src/**/*"
  ],
  "references": [
    // https://github.com/Microsoft/TypeScript/issues/31181
    //{"path": "../broccoli-eyeglass"},
    {"path": "../eyeglass"}
  ]

}